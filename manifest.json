{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Design Pattens - ERPx",
  "description": "Extensão responsável por organizar links de documentação.",
  "author": "Gustavo Zaffani",
  "action": {
    "default_title": "Patterns!",
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "index.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
